// 1 - Solicite o preço de uma mercadoria e o percentual de desconto 20%. Exiba no console o valor do desconto e o preço a pagar.

let mercadoria = 1000
let desconto = mercadoria *0.2
let precoVenda = mercadoria - desconto
const totalDesconto = `O total do desconto é R$ ${desconto},00`
const totalAPagar = `O valor da mercadoria é R$ ${precoVenda},00`

console.log(totalDesconto)
console.log(totalAPagar)